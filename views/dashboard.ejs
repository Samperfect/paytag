<!DOCTYPE html>
<html lang="en">
  <!-- Mirrored from Paytag.bragherstudio.com/view4/index.html by HTTrack Website Copier/3.x [XR&CO'2014], Thu, 30 Sep 2021 23:26:29 GMT -->
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, viewport-fit=cover"
    />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />
    <meta name="theme-color" content="#000000" />
    <title>Paytag | Dashboard</title>
    <meta name="description" content="Paytag HTML Mobile Template" />
    <meta
      name="keywords"
      content="paytag, borderless, cardless, payment, buycoins, patricia, paypal, tag, pay, payoneer"
    />
    <link
      rel="icon"
      type="image/png"
      href="assets/img/favicon.png"
      sizes="32x32"
    />
    <!-- <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="assets/img/icon/192x192.png"
    /> -->
    <link rel="stylesheet" href="assets/css/style.css" />
    <link rel="manifest" href="__manifest.json" />
  </head>

  <body>
    <!-- loader -->
    <div id="loader">
      <img src="assets/img/loading-icon.png" alt="icon" class="loading-icon" />
    </div>
    <!-- * loader -->

    <!-- App Header -->
    <%- include('./partials/header') %>
    <!-- * App Header -->

    <!-- App Capsule -->
    <div id="appCapsule">
      <!-- Wallet Card -->
      <div class="section wallet-card-section pt-1">
        <div class="wallet-card">
          <!-- Balance -->
          <div class="balance">
            <div class="left">
              <span class="title">Total Balance</span>
              <h1 class="total"><%= user.currency %> <%= user.wallet %></h1>
            </div>
            <div class="right">
              <a
                href="#"
                class="button"
                data-bs-toggle="modal"
                data-bs-target="#depositActionSheet"
              >
                <ion-icon name="add-outline"></ion-icon>
              </a>
            </div>
          </div>
          <!-- * Balance -->
          <!-- Wallet Footer -->
          <div class="wallet-footer">
            <div class="item">
              <a
                href="#"
                data-bs-toggle="modal"
                data-bs-target="#sendActionSheet"
              >
                <div class="icon-wrapper bg-danger">
                  <ion-icon name="arrow-forward-outline"></ion-icon>
                </div>
                <strong>Send</strong>
              </a>
            </div>
            <div class="item">
              <a
                href="#"
                data-bs-toggle="modal"
                data-bs-target="#reedemActionSheet"
              >
                <div class="icon-wrapper" style="background-color: #793e92">
                  <ion-icon name="arrow-up-outline"></ion-icon>
                </div>
                <strong>Reedem</strong>
              </a>
            </div>
            <div class="item">
              <a
                href="#"
                data-bs-toggle="modal"
                data-bs-target="#withdrawActionSheet"
              >
                <div class="icon-wrapper" style="background-color: #000">
                  <ion-icon name="arrow-down-outline"></ion-icon>
                </div>
                <strong>Withdraw</strong>
              </a>
            </div>
          </div>
          <!-- * Wallet Footer -->
        </div>
      </div>
      <!-- Wallet Card -->

      <!-- Deposit Action Sheet -->
      <div
        class="modal fade action-sheet"
        id="depositActionSheet"
        tabindex="-1"
        role="dialog"
      >
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Deposit Money</h5>
            </div>
            <div class="modal-body">
              <div class="action-sheet-content">
                <form>
                  <div class="form-group basic">
                    <div class="input-wrapper">
                      <label class="label" for="account1">From</label>
                      <select
                        required
                        name="method"
                        class="form-control custom-select"
                        id="account1"
                      >
                        <option value="bank">Add Account</option>
                        <option value="crypto">Crypto Deposit</option>
                        <option value="0">Savings (*** 5019)</option>
                        <option value="1">Current (*** 6212)</option>
                      </select>
                    </div>
                  </div>

                  <div class="form-group basic">
                    <label class="label">Enter Amount</label>
                    <div class="input-group mb-2">
                      <span class="input-group-text" id="basic-addona1"
                        ><%= user.currency %><%= user.currency %></span
                      >
                      <input
                        type="number"
                        required
                        class="form-control"
                        placeholder="Minimum deposit is 500"
                        name="amount"
                        min="500"
                      />
                    </div>
                  </div>

                  <div class="form-group basic">
                    <input
                      type="submit"
                      class="btn btn-primary btn-block btn-lg"
                      value="Deposit"
                    />
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- * Deposit Action Sheet -->

      <!-- Withdraw Action Sheet -->
      <div
        class="modal fade action-sheet"
        id="withdrawActionSheet"
        tabindex="-1"
        role="dialog"
      >
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Withdraw Money</h5>
            </div>
            <div class="modal-body">
              <div class="action-sheet-content">
                <form action="#">
                  <div class="form-group basic">
                    <label class="label">Enter Amount</label>
                    <div class="input-group mb-2">
                      <span class="input-group-text" id="basic-addona1"
                        ><%= user.currency %><%= user.currency %></span
                      >
                      <input
                        type="number"
                        id="wamount"
                        required
                        class="form-control"
                        placeholder="Minimum withdrawal is 500"
                        name="amount"
                        min="500"
                      />
                    </div>
                  </div>

                  <div class="form-group basic">
                    <div class="input-wrapper">
                      <label class="label" for="account1">Bank Account</label>
                      <select
                        required
                        name="bank"
                        class="form-control custom-select"
                        id="account1"
                      >
                        <option value="0">Savings (*** 5019)</option>
                        <option value="1">Current (*** 6212)</option>
                      </select>
                    </div>
                  </div>

                  <div class="form-group basic">
                    <input
                      type="submit"
                      class="btn btn-primary btn-block btn-lg"
                      value="Withdraw"
                    />
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- * Withdraw Action Sheet -->

      <!-- Send Action Sheet -->
      <div
        class="modal fade action-sheet"
        id="sendActionSheet"
        tabindex="-1"
        role="dialog"
      >
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Send Money</h5>
            </div>
            <div class="modal-body">
              <div class="action-sheet-content">
                <p class="text-muted" style="line-height: initial">
                  Sending money is as easy as generating a Paytag in one click!
                  Enter the amount and hit send!
                </p>
                <p class="text-muted" style="line-height: initial">
                  Just enter the amount and hit send!
                </p>

                <form class="send" autocomplete="off">
                  <div class="form-group basic">
                    <label class="label">Enter Amount</label>
                    <div class="input-group mb-2">
                      <input type="number" style="display: none" />
                      <span class="input-group-text" id="basic-addonb1"
                        ><%= user.currency %></span
                      >
                      <input
                        type="number"
                        required
                        id="samount"
                        class="form-control"
                        placeholder="Minimum amount is 50"
                        name="amount"
                        min="50"
                        autocomplete="off"
                      />
                    </div>
                  </div>
                  <div class="form-group basic">
                    <label class="label">Paytag Pin (optional)</label>

                    <div class="input-group mb-2">
                      <input type="password" style="display: none" />
                      <span class="input-group-text" id="basic-addonb1"
                        ><ion-icon name="key-outline"></ion-icon
                      ></span>

                      <input
                        type="password"
                        autocomplete="off"
                        id="spin"
                        name="pin"
                        class="form-control"
                        placeholder="secure your Paytag with a 4-digit pin."
                        minlength="4"
                        maxlength="4"
                        value=""
                      />
                    </div>
                  </div>
                  <!-- data-bs-dismiss="modal" -->
                  <div class="form-group basic">
                    <input
                      type="submit"
                      class="btn btn-primary btn-block btn-lg"
                      value="Send"
                    />
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- * Send Action Sheet -->

      <!-- Send Action Sheet -->
      <div
        class="modal fade action-sheet"
        id="reedemActionSheet"
        tabindex="-1"
        role="dialog"
      >
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Reedem Paytag</h5>
            </div>
            <div class="modal-body">
              <div class="action-sheet-content">
                <p class="text-muted" style="line-height: initial">
                  Reedem the funds in a Paytag into your account.
                </p>
                <p class="text-muted" style="line-height: initial">
                  You only need a pin if the Paytag has one!
                </p>

                <form action="" autocomplete="off">
                  <div class="form-group basic">
                    <label class="label">Enter Paytag</label>
                    <div class="input-group mb-2">
                      <input type="text" style="display: none" />
                      <span class="input-group-text" id="basic-addonb1"
                        ><ion-icon name="pricetag-outline"></ion-icon
                      ></span>
                      <input
                        type="text"
                        required
                        class="form-control"
                        placeholder="Enter your Paytag"
                        name="paytag"
                        minlength="5"
                        maxlength="5"
                        autocomplete="off"
                        autocapitalize="characters"
                        style="text-transform: uppercase"
                      />
                    </div>
                  </div>
                  <div class="form-group basic">
                    <label class="label">Paytag Pin (optional)</label>

                    <div class="input-group mb-2">
                      <input type="password" style="display: none" />
                      <span class="input-group-text" id="basic-addonb1"
                        ><ion-icon name="key-outline"></ion-icon
                      ></span>

                      <input
                        type="password"
                        autocomplete="off"
                        name="pin"
                        class="form-control"
                        placeholder="only if the Paytag requires a pin"
                        minlength="4"
                        maxlength="4"
                        value=""
                      />
                    </div>
                  </div>
                  <!-- data-bs-dismiss="modal" -->
                  <div class="form-group basic">
                    <input
                      type="submit"
                      class="btn btn-primary btn-block btn-lg"
                      value="Reedem"
                    />
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- * Send Action Sheet -->

      <!-- Stats -->
      <div class="section">
        <div class="row mt-2">
          <div class="col-6">
            <div class="stat-box">
              <div class="title">Total In</div>
              <div class="value text-success">
                <%= user.currency %> <%= user.income %>
              </div>
            </div>
          </div>
          <div class="col-6">
            <div class="stat-box">
              <div class="title">Total Spent</div>
              <div class="value text-danger">
                <%= user.currency %> <%= user.spent %>
              </div>
            </div>
          </div>
        </div>
        <div class="row mt-2">
          <div class="col-6">
            <div class="stat-box">
              <div class="title">Total Withdrawn</div>
              <div class="value">
                <%= user.currency %> <%= user.withdrawn %>
              </div>
            </div>
          </div>
          <!-- <div class="col-6">
            <div class="stat-box">
              <div class="title">Savings</div>
              <div class="value">$ 120.99</div>
            </div>
          </div> -->
        </div>
      </div>
      <!-- * Stats -->

      <!-- Transactions -->
      <div class="section mt-4">
        <div class="section-heading">
          <h2 class="title">Transactions</h2>
          <a href="/user/transactions" class="link">View All</a>
        </div>
        <div class="transactions">
          <% if (user.transactions.length > 5){ %> <% for(let i=0; i < 6; i++){
          var transaction = user.transactions[i] %>

          <!-- item -->
          <a
            href="/user/transactions/<%= transaction.transactionId._id %>"
            class="item"
          >
            <div class="detail">
              <img
                src="<%= transaction.transactionId.media %>"
                alt="img"
                class="image-block imaged w48"
              />
              <div>
                <strong><%= transaction.transactionId.description%></strong>
                <p><%= transaction.transactionId.createdAt %></p>
              </div>
            </div>
            <div class="right">
              <div class="price text-danger">
                <%= transaction.transactionId.sign %> <%= user.currency %> <%=
                transaction.transactionId.amount %>
              </div>
            </div>
          </a>
          <!-- * item -->

          <% } %> <% } else if (user.transactions.length < 5){ %> <%
          transactions.forEach( transaction => { %>

          <!-- item -->
          <a
            href="/user/transactions/<%= transaction.transactionId._id %>"
            class="item"
          >
            <div class="detail">
              <img
                src="<%= transaction.transactionId.media %>"
                alt="img"
                class="image-block imaged w48"
              />
              <div style="font-size: 12px">
                <strong><%= transaction.transactionId.description%></strong>
                <p>
                  <%= new
                  Date(transaction.transactionId.createdAt).toDateString() %>
                </p>
              </div>
            </div>
            <div class="right">
              <div
                style="font-size: 12px"
                class="
                  price
                  text-<%=
                  transaction.transactionId.sign
                  ==
                  '-'?
                  'danger':
                  'success'
                  %>
                "
              >
                <%= transaction.transactionId.sign %> <%= user.currency %> <%=
                transaction.transactionId.amount %>
              </div>
            </div>
          </a>
          <!-- * item -->

          <% } ) } else { %>

          <a class="item">
            <div class="detail">There are no transactions here</div>
          </a>

          <% } %>
        </div>
      </div>
      <!-- * Transactions -->

      <li style="display: none">
        <a
          href="#"
          class="item"
          data-bs-toggle="modal"
          id="smodal"
          data-bs-target="#sModal"
        >
          <div class="in">
            <div>Success</div>
          </div>
        </a>
      </li>
      <li style="display: none">
        <a
          href="#"
          class="item"
          id="fmodal"
          data-bs-toggle="modal"
          data-bs-target="#fModal"
        >
          <div class="in">
            <div>Failure</div>
          </div>
        </a>
      </li>

      <!-- DialogIconedSuccess -->
      <div
        class="modal fade dialogbox"
        id="fModal"
        data-bs-backdrop="static"
        tabindex="-1"
        role="dialog"
      >
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-icon text-danger">
              <ion-icon name="close-circle"></ion-icon>
            </div>
            <div class="modal-header">
              <h5 class="modal-title">Failed</h5>
            </div>
            <div class="modal-body fmsg">Something went wrong!</div>
            <div class="modal-footer">
              <div class="btn-inline">
                <a href="#" class="btn" data-bs-dismiss="modal">CLOSE</a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- * DialogIconedSuccess -->

      <!-- Dialog Form -->
      <div
        class="modal fade dialogbox"
        id="sModal"
        data-bs-backdrop="static"
        tabindex="-1"
        role="dialog"
      >
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-icon text-success">
              <ion-icon name="checkmark-circle"></ion-icon>
            </div>
            <div class="modal-header">
              <h5 class="modal-title smsg">Success</h5>
            </div>

            <div class="modal-body text-start mb-2">
              <div class="form-group basic">
                <div class="input-wrapper">
                  <label class="label" for="text1">Your Paytag</label>
                  <input type="text" class="form-control" id="newpaytag" />
                  <i class="clear-input">
                    <ion-icon name="close-circle"></ion-icon>
                  </i>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <div class="btn-inline">
                <button
                  type="button"
                  class="btn btn-text-secondary"
                  data-bs-dismiss="modal"
                >
                  COPY
                </button>
                <button
                  type="button"
                  class="btn btn-text-primary"
                  data-bs-dismiss="modal"
                >
                  CLOSE
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- * Dialog Form -->

      <!-- app footer -->
      <div class="appFooter">
        <div class="footer-title">
          Copyright Â© Paytag 2021. All Rights Reserved.
        </div>
      </div>
      <!-- * app footer -->
    </div>
    <!-- * App Capsule -->

    <!-- App Bottom Menu -->
    <%- include('./partials/menu') %>

    <!-- * App Bottom Menu -->

    <!-- App Sidebar -->
    <%- include('./partials/sidebar') %>
    <!-- * App Sidebar -->

    <!-- PWA SECTION -->
    <%- include('./partials/pwa') %>
    <!-- PWA SECTION END -->

    <!-- ========= JS Files =========  -->
    <%- include('./partials/footer') %>
  </body>

